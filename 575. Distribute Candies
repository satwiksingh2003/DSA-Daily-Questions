class Solution {
    public int distributeCandies(int[] candyType) {
        HashSet<Integer> set = new HashSet<>();
        int limit = candyType.length / 2;

        for (int candy : candyType) {
            set.add(candy);
            if (set.size() == limit) {
                return limit;   // early stop
            }
        }

        return set.size();
    }
}
