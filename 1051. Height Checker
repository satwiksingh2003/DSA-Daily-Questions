class Solution {
    public int heightChecker(int[] heights) {
        int[] count = new int[101]; // because heights range 1â€“100
        //Count frequencies
        for(int h : heights){
            count[h]++;
        }
        int index = 0;
        int mismatches = 0;
        //Simulate sorted order
        for(int h = 1; h <= 100; h++){
            while(count[h] > 0){
                if(heights[index] != h){
                    mismatches++;
                }
                index++;
                count[h]--;
            }
        }
        return mismatches;
    }
}
