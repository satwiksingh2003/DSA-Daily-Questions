import java.util.*;
class Solution {
    public List<Integer> getRow(int rowIndex) {
        List<Integer> list = new ArrayList<>();
        long value = 1;  // First element is always 1
        for(int r = 0; r <= rowIndex; r++) {
            list.add((int)value);  
            // Compute next value using formula nCR = nCr-1 * (n-r+1)/r
            value = value * (rowIndex - r) / (r + 1);
        }
        return list;
    }
}
